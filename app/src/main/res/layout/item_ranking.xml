<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_item_datetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/item_ranking_margin_horizontal"
        android:layout_marginTop="@dimen/item_ranking_margin_vertical"
        android:layout_marginEnd="233dp"
        tools:text="27/02/2022 11:48" />

    <TextView
        android:id="@+id/tv_item_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/item_ranking_margin_vertical"
        android:layout_marginEnd="@dimen/item_ranking_margin_horizontal"
        android:textStyle="bold|italic"
        tools:text="15.3s" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_item_datetime"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/item_ranking_margin_vertical"
        android:layout_marginBottom="@dimen/item_divider_margin_vertical"
        android:layout_marginStart="@dimen/item_divider_margin_horizontal"
        android:layout_marginEnd="@dimen/item_divider_margin_horizontal"
        android:background="?android:attr/listDivider" />
</RelativeLayout>